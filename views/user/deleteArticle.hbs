{{#if user}}
<div class="modal-body">
    <label class="col-md-3 control-label"></label>
    <div class="col-md-8">
        <h1 class="modal-title">Do you want to delete this article ?</h1>
        <form method="post">
            <button type="submit" class="btn btn-primary" >Yes</button>
            <a href="/user/articles/{{user.id}}" class="btn btn-default">No</a>
        </form>
    </div>
</div>
{{/if}}

{{#unless user}}
    <div class="container body-content">
        <div class="col-md-12">
            <h1>You are not logged in!</h1>
        </div>
    </div>
{{/unless}}